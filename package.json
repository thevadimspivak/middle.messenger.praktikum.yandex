{
  "name": "messenger",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "start": "npm run build && npm run preview",
    "preview": "vite preview --port 3000",
    "test": "jest",
    "lint": "npm run lint:ts && npm run lint:style && npm run lint:types",
    "lint:ts": "eslint src/**/*.ts",
    "lint:style": "stylelint src/**/*.scss",
    "lint:types": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "sass": "^1.69.5",
    "stylelint": "^17.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.2",
    "vite": "^6.4.1"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
